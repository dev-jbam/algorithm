{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "command": "sh",
    "args": ["-c"],
    "options": {
        "cwd": "${workspaceRoot}"
    },
    "tasks": [
        {
            "label": "cmake and make",
            "type": "shell",
            "command": "mkdir -p build; cd build; pwd; cmake -DCMAKE_BUILD_TYPE=Debug ${cwd}/build/..; make",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}